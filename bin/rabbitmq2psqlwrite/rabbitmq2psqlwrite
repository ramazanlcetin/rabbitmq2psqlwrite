#!/usr/bin/env python

import os
import logging
import asyncio
from rabbitmq2psqlwrite import perform_task

logger = logging.getLogger("rabbitmq2psqlwrite")
logger.setLevel(os.environ.get('LOG_LEVEL', "DEBUG"))
handler = logging.StreamHandler()
handler.setFormatter(
    logging.Formatter(
        os.environ.get('LOG_FORMAT', "%(asctime)s [%(levelname)s] %(name)s: %(message)s")
    )
)
logger.addHandler(handler)
loop = asyncio.get_event_loop()
try:
    loop.run_until_complete(perform_task(loop=loop, logger=logger))
finally:
    loop.close()
